<!DOCTYPE html>
<html>
  <head>
    <title>Etsydemo</title>
    <%= render 'layouts/bootstrap' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://js.stripe.com/v2/" %>
    <%= csrf_meta_tags %>    
    <%= tag :meta, :name => "stripe-key", :content => ENV["STRIPE_PUBLIC_KEY"] %>
  </head>

  <body>

    <%= render 'layouts/header' %>

    <div class="container-fluid">

      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="alert alert-<%= name=="notice" ? "success" : "danger" %> alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span><span 
              class="sr-only">Close</span></button>
            <%= content_tag :div, msg, :id => "flash_#{name}"%>
          </div>
        <% end %>
      <% end %>      
      <%= yield %>
      <p>
        <%= render 'layouts/footer'%>
      </p>
    </div>
  </body>
</html>

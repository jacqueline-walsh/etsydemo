<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1>Handcrafted T-shirts from around the world!</h1>
    <h2>Discover one of a kind T-shirts</h2>
  </div>
</div>
<div class="centre">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="img-thumbnail">
          <%= link_to image_tag(listing.image.url), listing, class:"img-fluid" %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by: #{listing.user.name}" %></p>            
          </div>
        </div>
     </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path %>
<% end %>

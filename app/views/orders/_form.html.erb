    <%= form.label :town %>
    <%= form.text_field :town, id: :order_town, class:"form-control" %>
  </div>

  <div class="form-grouop">
    <%= form.label :county %>
    <%= form.text_field :county, id: :order_county, class:"form-control" %>
  </div>
